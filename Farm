--[[ 
    PROTECTED BY ACUSADO SYSTEM 
    GUI: ACUSADO NINJA HUB
    KEY: BACK01
]]

local _0xKey = "BACK01"
local _0xPlr = game:GetService("Players").LocalPlayer
local _0xVIM = game:GetService("VirtualInputManager")

local function _0xSecure(f)
    local s, r = pcall(f)
    if not s then return end
end

_0xSecure(function()
    local farm = false
    local items = {"Water", "Sugar Block Bag", "Gelatin", "Empty Bag"}

    local sg = Instance.new("ScreenGui", game:GetService("CoreGui"))
    sg.Name = "N_HUB_" .. math.random(100, 999)

    -- [ BOTÃ“N FLOTANTE ]
    local toggle = Instance.new("TextButton", sg)
    toggle.Size, toggle.Position = UDim2.new(0,45,0,45), UDim2.new(0,10,0,150)
    toggle.Text, toggle.Visible = "ðŸ¥·", false
    toggle.BackgroundColor3, toggle.TextColor3 = Color3.fromRGB(10,10,15), Color3.fromRGB(0,120,255)
    Instance.new("UICorner", toggle).CornerRadius = UDim.new(1,0)
    Instance.new("UIStroke", toggle).Color = Color3.fromRGB(0,120,255)
    toggle.Active, toggle.Draggable = true, true

    -- [ LOGIN FRAME ]
    local login = Instance.new("Frame", sg)
    login.Size, login.Position = UDim2.new(0,220,0,150), UDim2.new(0.5,-110,0.4,-75)
    login.BackgroundColor3 = Color3.fromRGB(10,10,12)
    Instance.new("UIStroke", login).Color = Color3.fromRGB(0,120,255)

    local input = Instance.new("TextBox", login)
    input.Size, input.Position = UDim2.new(0,180,0,35), UDim2.new(0,20,0,30)
    input.PlaceholderText, input.Text = "INGRESE KEY", ""
    input.BackgroundColor3, input.TextColor3 = Color3.fromRGB(20,20,25), Color3.fromRGB(255,255,255)

    local enterBtn = Instance.new("TextButton", login)
    enterBtn.Size, enterBtn.Position = UDim2.new(0,180,0,40), UDim2.new(0,20,0,80)
    enterBtn.Text, enterBtn.BackgroundColor3 = "ENTRAR", Color3.fromRGB(0,80,200)
    enterBtn.TextColor3, enterBtn.Font = Color3.fromRGB(255,255,255), "GothamBold"
    Instance.new("UICorner", enterBtn)

    -- [ MAIN HUB ]
    local main = Instance.new("Frame", sg)
    main.Size, main.Position = UDim2.new(0,260,0,180), UDim2.new(0.5,-130,0.4,-90)
    main.BackgroundColor3, main.Visible, main.Active, main.Draggable = Color3.fromRGB(10,10,15), false, true, true
    Instance.new("UIStroke", main).Color = Color3.fromRGB(0,120,255)

    local title = Instance.new("TextLabel", main)
    title.Size, title.Text = UDim2.new(1,0,0,40), "ACUSADO NINJA HUB"
    title.BackgroundColor3, title.TextColor3 = Color3.fromRGB(15,15,20), Color3.fromRGB(0,180,255)
    title.Font = "GothamBold"

    local btn = Instance.new("TextButton", main)
    btn.Size, btn.Position = UDim2.new(0,220,0,50), UDim2.new(0,20,0,60)
    btn.Text, btn.BackgroundColor3 = "AUTO-FARM: OFF", Color3.fromRGB(30,30,35)
    btn.TextColor3, btn.Font = Color3.fromRGB(200,200,200), "GothamBold"
    Instance.new("UICorner", btn)

    -- [ ACCESO ]
    enterBtn.MouseButton1Click:Connect(function()
        if input.Text == _0xKey then
            login:Destroy()
            main.Visible = true
            toggle.Visible = true
        else
            enterBtn.Text = "KEY INCORRECTA"
            enterBtn.BackgroundColor3 = Color3.fromRGB(150,0,0)
            task.wait(1)
            enterBtn.Text = "ENTRAR"
            enterBtn.BackgroundColor3 = Color3.fromRGB(0,80,200)
        end
    end)

    toggle.MouseButton1Click:Connect(function()
        main.Visible = not main.Visible
    end)

    -- [ AUTO-FARM ]
    local function _0xDel()
        if _0xPlr.Backpack:FindFirstChild("BORRADOR") then return end
        local t = Instance.new("Tool", _0xPlr.Backpack)
        t.Name, t.RequiresHandle = "BORRADOR", false
        t.Activated:Connect(function()
            local tar = _0xPlr:GetMouse().Target
            if tar and not tar:FindFirstChild("Humanoid") then
                tar.Transparency, tar.CanCollide = 1, false
                tar.Position = tar.Position + Vector3.new(0,-1000,0)
            end
        end)
    end

    btn.MouseButton1Click:Connect(function()
        farm = not farm
        btn.Text = farm and "AUTO-FARM: ON" or "AUTO-FARM: OFF"
        btn.BackgroundColor3 = farm and Color3.fromRGB(0,120,255) or Color3.fromRGB(30,30,35)
        
        if farm then
            _0xDel()
            task.spawn(function()
                while farm do
                    local found = false
                    for _, i in pairs(items) do
                        if not farm then break end
                        local t = _0xPlr.Backpack:FindFirstChild(i) or (_0xPlr.Character and _0xPlr.Character:FindFirstChild(i))
                        if t then
                            found = true
                            _0xPlr.Character.Humanoid:EquipTool(t)
                            task.wait(0.3)
                            _0xVIM:SendMouseButtonEvent(0,0,0,true,game,0)
                            task.wait(0.1)
                            _0xVIM:SendMouseButtonEvent(0,0,0,false,game,0)
                            _0xVIM:SendKeyEvent(true, Enum.KeyCode.E, false, game)
                            task.wait(0.1)
                            _0xVIM:SendKeyEvent(false, Enum.KeyCode.E, false, game)
                            task.wait(1.5)
                        end
                    end
                    if not found then farm = false; btn.Text = "AUTO-FARM: OFF"; break end
                    task.wait(0.5)
                end
            end)
        end
    end)

    _0xPlr.Idled:Connect(function() 
        game:GetService("VirtualUser"):CaptureController()
        game:GetService("VirtualUser"):ClickButton2(Vector2.new()) 
    end)
end)
