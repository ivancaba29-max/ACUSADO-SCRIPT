-- // ACUSADO NINJA HUB - SAFE & ORIGINAL ðŸ‘‘ //
-- Key: BACK01

local CLAVE_CORRECTA = "BACK01"
local L_Plr = game:GetService("Players").LocalPlayer

local function ExecuteHub()
    -- CARGAR TU SCRIPT PERSONALIZADO
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/ivancaba29-max/ACUSADO-SCRIPT/refs/heads/main/Personalizado%20mÃ­o"))()
    end)

    local Players = game:GetService("Players")
    local RunService = game:GetService("RunService")
    local Lighting = game:GetService("Lighting")
    local Camera = workspace.CurrentCamera

    -- SEGURIDAD: Nombre aleatorio y Parent seguro
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "AcuHub_" .. math.random(100, 999)
    pcall(function() ScreenGui.Parent = (gethui and gethui()) or game:GetService("CoreGui") end)
    
    local Neon_Color = Color3.fromRGB(0, 255, 0)
    local Carbon_Black = Color3.fromRGB(10, 10, 10)

    -- // CONFIGURACIONES (COMO LAS TENÃAS) //
    _G.ESP_Box = false; _G.ESP_Tracer = false; _G.ESP_Inventario = false
    _G.Hitbox_Active = false; _G.Hitbox_Size = 15

    -- // VENTANA DE KEY //
    local KeyFrame = Instance.new("Frame", ScreenGui)
    KeyFrame.Size = UDim2.new(0, 300, 0, 160); KeyFrame.Position = UDim2.new(0.5, -150, 0.5, -80)
    KeyFrame.BackgroundColor3 = Carbon_Black; KeyFrame.Active = true; KeyFrame.Draggable = true; Instance.new("UICorner", KeyFrame)
    local KeyStroke = Instance.new("UIStroke", KeyFrame); KeyStroke.Color = Neon_Color

    local KeyTitle = Instance.new("TextLabel", KeyFrame)
    KeyTitle.Size = UDim2.new(1, 0, 0, 40); KeyTitle.Text = "ACUSADO NINJA HUB"; KeyTitle.TextColor3 = Neon_Color; KeyTitle.BackgroundTransparency = 1; KeyTitle.Font = Enum.Font.Code; KeyTitle.TextSize = 20

    local KeyInput = Instance.new("TextBox", KeyFrame)
    KeyInput.Size = UDim2.new(0, 220, 0, 40); KeyInput.Position = UDim2.new(0.5, -110, 0.45, 0); KeyInput.PlaceholderText = "Escribe BACK01..."; KeyInput.BackgroundColor3 = Color3.fromRGB(20,20,20); KeyInput.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", KeyInput)

    local KeyBtn = Instance.new("TextButton", KeyFrame)
    KeyBtn.Size = UDim2.new(0, 120, 0, 35); KeyBtn.Position = UDim2.new(0.5, -60, 0.78, 0); KeyBtn.Text = "VALIDAR"; KeyBtn.BackgroundColor3 = Color3.fromRGB(0, 40, 0); KeyBtn.TextColor3 = Neon_Color; Instance.new("UICorner", KeyBtn)

    -- // VENTANA PRINCIPAL //
    local MainFrame = Instance.new("Frame", ScreenGui)
    MainFrame.Size = UDim2.new(0, 530, 0, 390); MainFrame.Position = UDim2.new(0.5, -265, 0.5, -190)
    MainFrame.BackgroundColor3 = Carbon_Black; MainFrame.Visible = false; MainFrame.Active = true; MainFrame.Draggable = true; Instance.new("UICorner", MainFrame)
    local MainStroke = Instance.new("UIStroke", MainFrame); MainStroke.Color = Neon_Color

    -- BOTÃ“N REABRIR
    local OpenBtn = Instance.new("TextButton", ScreenGui)
    OpenBtn.Size = UDim2.new(0, 130, 0, 40); OpenBtn.Position = UDim2.new(0, 10, 0.5, 0); OpenBtn.Visible = false; OpenBtn.Text = "REGRESAR MENÃš"; OpenBtn.BackgroundColor3 = Carbon_Black; OpenBtn.TextColor3 = Neon_Color; OpenBtn.Font = Enum.Font.Code; Instance.new("UICorner", OpenBtn)
    local OpenStroke = Instance.new("UIStroke", OpenBtn); OpenStroke.Color = Neon_Color

    KeyBtn.MouseButton1Click:Connect(function()
        if KeyInput.Text == CLAVE_CORRECTA then KeyFrame.Visible = false; MainFrame.Visible = true end
    end)

    local Banner = Instance.new("TextLabel", MainFrame)
    Banner.Size = UDim2.new(1, 0, 0, 45); Banner.Text = "  ACUSADO | " .. L_Plr.Name:upper()
    Banner.BackgroundColor3 = Color3.fromRGB(20, 20, 20); Banner.TextColor3 = Neon_Color; Banner.Font = Enum.Font.Code; Banner.TextSize = 17; Banner.TextXAlignment = Enum.TextXAlignment.Left; Instance.new("UICorner", Banner)

    -- FunciÃ³n para cambiar colores
    local function ChangeC(color)
        Neon_Color = color
        KeyStroke.Color = color; KeyTitle.TextColor3 = color; KeyBtn.TextColor3 = color
        MainStroke.Color = color; Banner.TextColor3 = color; OpenBtn.TextColor3 = color; OpenStroke.Color = color
    end

    -- // LÃ“GICA HITBOX (TUYA) //
    local function ResetHitboxes()
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= L_Plr and p.Character and p.Character:FindFirstChild("Head") then
                pcall(function() p.Character.Head.Size = Vector3.new(1.2, 1.2, 1.2); p.Character.Head.Transparency = 0; p.Character.Head.CanCollide = true end)
            end
        end
    end

    RunService.RenderStepped:Connect(function()
        if _G.Hitbox_Active then
            for _, p in pairs(Players:GetPlayers()) do
                if p ~= L_Plr and p.Character and p.Character:FindFirstChild("Head") then
                    pcall(function() 
                        local head = p.Character.Head
                        head.Size = Vector3.new(_G.Hitbox_Size, _G.Hitbox_Size, _G.Hitbox_Size)
                        head.Transparency = 0.6; head.CanCollide = false; head.Massless = true 
                    end)
                end
            end
        end
    end)

    -- // LÃ“GICA ESP (TUYA) //
    local function CreateESP(plt)
        local Box = Drawing.new("Square"); Box.Thickness = 1.5; Box.Filled = false
        local Tracer = Drawing.new("Line"); Tracer.Thickness = 1
        local Info = Drawing.new("Text"); Info.Size = 14; Info.Center = true; Info.Outline = true; Info.Color = Color3.new(1,1,1)

        RunService.RenderStepped:Connect(function()
            Box.Color = Neon_Color; Tracer.Color = Neon_Color
            if plt.Character and plt.Character:FindFirstChild("HumanoidRootPart") and plt.Character.Humanoid.Health > 0 then
                local hrp = plt.Character.HumanoidRootPart
                local pos, onScreen = Camera:WorldToViewportPoint(hrp.Position)
                if onScreen then
                    local sizeX = 2300 / pos.Z; local sizeY = 3200 / pos.Z
                    Box.Visible = _G.ESP_Box; if _G.ESP_Box then Box.Size = Vector2.new(sizeX, sizeY); Box.Position = Vector2.new(pos.X - sizeX / 2, pos.Y - sizeY / 2) end
                    Tracer.Visible = _G.ESP_Tracer; if _G.ESP_Tracer then Tracer.From = Vector2.new(Camera.ViewportSize.X / 2, 0); Tracer.To = Vector2.new(pos.X, pos.Y - (sizeY / 2)) end
                    Info.Visible = _G.ESP_Inventario; if _G.ESP_Inventario then local tool = plt.Character:FindFirstChildOfClass("Tool"); Info.Text = plt.Name .. "\n[" .. (tool and tool.Name or "Vacio") .. "]"; Info.Position = Vector2.new(pos.X, (pos.Y - sizeY / 2) - 30) end
                else Box.Visible = false; Tracer.Visible = false; Info.Visible = false end
            else Box.Visible = false; Tracer.Visible = false; Info.Visible = false end
        end)
    end
    for _, p in pairs(Players:GetPlayers()) do if p ~= L_Plr then CreateESP(p) end end
    Players.PlayerAdded:Connect(function(p) if p ~= L_Plr then CreateESP(p) end end)

    -- // TABS //
    local Container = Instance.new("Frame", MainFrame)
    Container.Position = UDim2.new(0, 150, 0, 55); Container.Size = UDim2.new(1, -160, 1, -65); Container.BackgroundTransparency = 1
    local Tabs = { Combat = Instance.new("ScrollingFrame"), Visuals = Instance.new("ScrollingFrame"), Misc = Instance.new("ScrollingFrame"), Colors = Instance.new("ScrollingFrame") }
    for name, frame in pairs(Tabs) do
        frame.Size = UDim2.new(1, 0, 1, 0); frame.BackgroundTransparency = 1; frame.Visible = (name == "Combat"); frame.Parent = Container; frame.ScrollBarThickness = 0
        Instance.new("UIListLayout", frame).Padding = UDim.new(0, 10)
    end

    local function AddBtn(parent, text, func)
        local b = Instance.new("TextButton", parent); b.Size = UDim2.new(1, -10, 0, 40); b.BackgroundColor3 = Color3.fromRGB(30, 30, 30); b.Text = "[ " .. text .. " ]"; b.TextColor3 = Neon_Color; b.Font = Enum.Font.Code; Instance.new("UICorner", b)
        b.MouseButton1Click:Connect(function() pcall(func) end)
        RunService.RenderStepped:Connect(function() b.TextColor3 = Neon_Color end)
    end

    -- // BOTONES ORIGINALES //
    AddBtn(Tabs.Combat, "CARGAR AIMBOT MOBILE", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/DanielHubll/DanielHubll/refs/heads/main/Aimbot%20Mobile"))() end)
    local SizeBox = Instance.new("TextBox", Tabs.Combat); SizeBox.Size = UDim2.new(1, -10, 0, 40); SizeBox.PlaceholderText = "TAMAÃ‘O (EJ: 20)"; SizeBox.BackgroundColor3 = Color3.fromRGB(15,15,15); SizeBox.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", SizeBox)
    SizeBox.FocusLost:Connect(function() _G.Hitbox_Size = tonumber(SizeBox.Text) or 15 end)
    AddBtn(Tabs.Combat, "ACTIVAR HITBOX", function() _G.Hitbox_Active = true end)
    AddBtn(Tabs.Combat, "DESACTIVAR / RESET", function() _G.Hitbox_Active = false; ResetHitboxes() end)

    AddBtn(Tabs.Visuals, "ESP: LINEA TOP", function() _G.ESP_Tracer = not _G.ESP_Tracer end)
    AddBtn(Tabs.Visuals, "ESP: BOX", function() _G.ESP_Box = not _G.ESP_Box end)
    AddBtn(Tabs.Visuals, "ESP: INVENTARIO", function() _G.ESP_Inventario = not _G.ESP_Inventario end)

    AddBtn(Tabs.Misc, "OPTIMIZAR FPS", function() Lighting.GlobalShadows = false end)
    AddBtn(Tabs.Misc, "DELETE TOOL", function() 
        local t = Instance.new("Tool", L_Plr.Backpack); t.Name = "Borrar"; t.RequiresHandle = false
        t.Activated:Connect(function() local target = L_Plr:GetMouse().Target; if target and not target.Parent:FindFirstChild("Humanoid") then target:Destroy() end end) 
    end)

    -- // NUEVA TAB TEMAS //
    AddBtn(Tabs.Colors, "VERDE", function() ChangeC(Color3.fromRGB(0, 255, 0)) end)
    AddBtn(Tabs.Colors, "ROJO", function() ChangeC(Color3.fromRGB(255, 0, 0)) end)
    AddBtn(Tabs.Colors, "AZUL", function() ChangeC(Color3.fromRGB(0, 150, 255)) end)
    AddBtn(Tabs.Colors, "NARANJA", function() ChangeC(Color3.fromRGB(255, 130, 0)) end)
    AddBtn(Tabs.Colors, "MORADO", function() ChangeC(Color3.fromRGB(180, 0, 255)) end)
    AddBtn(Tabs.Colors, "NEGRO", function() ChangeC(Color3.fromRGB(60, 60, 60)) end)

    -- SIDEBAR
    local Sidebar = Instance.new("Frame", MainFrame); Sidebar.Size = UDim2.new(0, 140, 1, -55); Sidebar.Position = UDim2.new(0, 5, 0, 50); Sidebar.BackgroundTransparency = 1
    local function AddTab(txt, target, y)
        local b = Instance.new("TextButton", Sidebar); b.Size = UDim2.new(1, -10, 0, 40); b.Position = UDim2.new(0, 5, 0, y); b.BackgroundColor3 = Color3.fromRGB(20, 20, 20); b.Text = txt; b.TextColor3 = Neon_Color; b.Font = Enum.Font.Code; Instance.new("UICorner", b)
        b.MouseButton1Click:Connect(function() for _, t in pairs(Tabs) do t.Visible = false end; Tabs[target].Visible = true end)
        RunService.RenderStepped:Connect(function() b.TextColor3 = Neon_Color end)
    end
    AddTab("COMBATE", "Combat", 0); AddTab("VISUALES", "Visuals", 45); AddTab("SISTEMA", "Misc", 90); AddTab("TEMAS", "Colors", 135)

    -- CERRAR / ABRIR
    local CloseBtn = Instance.new("TextButton", MainFrame); CloseBtn.Size = UDim2.new(0, 30, 0, 30); CloseBtn.Position = UDim2.new(1, -38, 0, 8); CloseBtn.Text = "X"; CloseBtn.BackgroundColor3 = Color3.fromRGB(50,0,0); CloseBtn.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", CloseBtn)
    
    CloseBtn.MouseButton1Click:Connect(function() MainFrame.Visible = false; OpenBtn.Visible = true end)
    OpenBtn.MouseButton1Click:Connect(function() MainFrame.Visible = true; OpenBtn.Visible = false end)
end

pcall(ExecuteHub)
